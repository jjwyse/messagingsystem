<b:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:b="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/security 
        http://www.springframework.org/schema/security/spring-security-3.3.xsd">

	<http use-expressions="true" entry-point-ref="gaeEntryPoint">
		<intercept-url pattern="/" access="permitAll" />
		<intercept-url pattern="/**" access="hasRole('USER')" />
	</http>

	<b:bean id="gaeEntryPoint" class="com.jjw.messagingsystem.security.GoogleAccountsAuthenticationEntryPoint" />
</b:beans>